<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/FtSignUp_img_back"
        android:layout_width="30dp"
        android:layout_marginTop="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/circle"
        android:src="@drawable/left_backscreen"
        android:layout_marginStart="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FtSignUp_textLayout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:hint="Ad"
            android:textColorHint="@color/black">

            <EditText
                android:id="@+id/FtSignUp_edt_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FtSignUp_textLayout_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:hint="Soyad"
            android:textColorHint="@color/black">

            <EditText
                android:id="@+id/FtSignUp_edt_surname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FtSignUp_textLayout_email"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:hint="E-Posta"
            android:textColorHint="@color/black">

            <EditText
                android:id="@+id/FtSignUp_edt_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FtSignUp_textLayout_password"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:hint="Şifre"
            android:textColorHint="@color/black">

            <EditText
                android:id="@+id/FtSignUp_edt_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:inputType="textPassword"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FtSignUp_textLayout_passwordConfirm"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:hint="Şifre (Tekrar)"
            android:textColorHint="@color/black">

            <EditText
                android:id="@+id/FtSignUp_edt_passwordconfirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:inputType="textPassword"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FtSignUp_textLayout_phone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:hint="Telefon"
            android:textColorHint="@color/black">

            <EditText
                android:id="@+id/FtSignUp_edt_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:inputType="phone"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/FtSignUp_btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_green"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Kayıt Ol"
            android:textColor="@color/white"/>

    </LinearLayout>
    </LinearLayout>
</FrameLayout>